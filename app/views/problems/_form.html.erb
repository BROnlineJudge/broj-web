<%= form_for(problem) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, required: true, placeholder: 'Name', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: 10, required: true, placeholder: 'Description', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :input_description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :input_description, rows: 3, required: true, placeholder: 'Input description', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :output_description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :output_description, rows: 3, required: true, placeholder: 'Output description', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :time_limit, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.number_field :time_limit, required: true, placeholder: 'Time Limit (seconds)', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :memory_limit, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.number_field :memory_limit, required: true, placeholder: 'Memory Limit (kb)', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :note, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :note, required: true, placeholder: 'Note', class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
