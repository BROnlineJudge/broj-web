<%= form_for(problem) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, required: true, placeholder: 'Name', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :description, required: true, placeholder: 'Description', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :sample_input, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :sample_input, required: true, placeholder: 'Sample Input', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :sample_output, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :sample_output, required: true, placeholder: 'Sample Output', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :input, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :input, required: true, placeholder: 'Input', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :output, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :output, required: true, placeholder: 'Output', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :note, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :note, required: true, placeholder: 'Note', class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
