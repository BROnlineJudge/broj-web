<%= form_for(problem) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, required: true, placeholder: 'Name', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: 10, required: true, placeholder: 'Description', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Input", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_area :input_description, rows: 3, required: true, placeholder: 'Sample input', class: 'form-control' %>
    </div>
    <div class="col-sm-4">
      <%= f.label "Input package" %>
      <%= f.file_field :input_description %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Output", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_area :output_description, rows: 3, required: true, placeholder: 'Sample output', class: 'form-control' %>
    </div>
    <div class="col-sm-4">
      <%= f.label "Output package" %>
      <%= f.file_field :output_description %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :time_limit, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.number_field :time_limit, required: true, placeholder: 'Time Limit (seconds)', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :memory_limit, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.number_field :memory_limit, required: true, placeholder: 'Memory Limit (kb)', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :note, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :note, placeholder: 'Note', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Custom check", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :custom_check, rows: 3, placeholder: 'Custom check', class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Create', class: 'btn btn-success'%>
  </div>
<% end %>
