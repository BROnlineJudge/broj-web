<%= form_for(submission) do |f| %>
  <div class="form-group row">
    <%= f.label :verdict, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :verdict, autofocus: true, required: true, placeholder: 'WA', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :language, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.select :language, [["c", "c"], ["cpp", "cpp"], ["python", "python"],
      ["java", "java"]], {required: true,}, { class: 'form-control custom-select'} %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :execution_time, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.number_field :execution_time, required: true, placeholder: 'Execution time(miliseconds)', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :code, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :code, rows: 10, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :problem, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.select :problem_id, Problem.pluck(:name, :id), {}, { class: 'form-control custom-select'} %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-success'%>
  </div>
<% end %>
