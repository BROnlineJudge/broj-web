<%= form_for(submission) do |f| %>
  <% if submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :verdict %>
    <%= f.text_field :verdict %>
  </div>

  <div class="field">
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>

  <div class="field">
    <%= f.label :execution_time %>
    <%= f.number_field :execution_time %>
  </div>

  <div class="field">
    <%= f.label :code %>
    <%= f.text_area :code %>
  </div>

  <div class="form-group row">
    <%= f.label :problem, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.select :problem_id, Problem.pluck(:name, :id), {}, { class: 'form-control custom-select'} %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
