<div class="container">
  <div class="row">
    <div class="col-md-9 push-md-3">
      <h1>Submissions</h1>
    </div>

    <div class="col-md-12">
      <table class="table table-striped table-bordered table-hover table-responsive contest">
        <thead>
          <tr>
          <th>Verdict</th>
          <th>Language</th>
          <th>Execution time</th>
          <th colspan=2></th>
          </tr>
        </thead>

        <tbody>
          <% @submissions.each do |submission| %>
            <tr>
              <td><%= link_to submission.verdict, submission_path(submission) %></td>
              <td><%= submission.language %></td>
              <td><%= submission.execution_time %>ms</td>
              <td>
                <%= link_to 'Edit', edit_submission_path(submission), class: 'btn btn-xs btn-secondary' %>
                <%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'New Submission', new_submission_path, class: 'btn btn-primary' %>

    </div>
  </div>
</div>
