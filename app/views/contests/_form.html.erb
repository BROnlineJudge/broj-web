<%= form_for(contest) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, required: true, placeholder: 'Name', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :start, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.datetime_select :start, required: true, html_options: {class: 'form-control custom-select', type: 'datetime-local'} %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :duration, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.number_field :duration, required: true, placeholder: 'Duration (minutes)', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :problem_ids, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.select :problem_ids, Problem.pluck(:name, :id), {}, { multiple: true, class: 'form-control custom-select'} %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success'%>
  </div>
<% end %>
