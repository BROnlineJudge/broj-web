<%= form_for(contest) do |f| %>
  <% if contest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contest.errors.count, "error") %> prohibited this contest from being saved:</h2>

      <ul>
      <% contest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, required: true, placeholder: 'Name', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :start, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.time_select :start, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :duration, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.number_field :duration, required: true, placeholder: '300', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :problem_ids, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.select :problem_ids, Problem.pluck(:name, :id), {}, { multiple: true, class: 'form-control custom-select'} %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
