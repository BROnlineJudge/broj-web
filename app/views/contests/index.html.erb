<div class="container">
  <div class="row">
    <div class="col-md-9 push-md-3">
      <h1>Contests</h1>
    </div>

    <div class="col-md-12">
      <table class="table table-bordered table-hover table-responsive">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Start</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @contests.each do |contest| %>
            <tr>
              <td scope="row"><%= contest.id %></td>
              <td><%= contest.name %></td>
              <td><%= contest.start %></td>
              <td>
                <%= link_to 'Show', contest_path(contest), class: 'btn btn-xs btn-secondary' %>
                <%= link_to 'Edit', edit_contest_path(contest), class: 'btn btn-xs btn-secondary' %>
                <%= link_to 'Destroy', contest, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'New Contest', new_contest_path, class: 'btn btn-primary' %>

    </div>
  </div>
</div>
